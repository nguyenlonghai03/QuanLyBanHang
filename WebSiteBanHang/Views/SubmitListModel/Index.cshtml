@using WebSiteBanHang.Models
@model PhieuNhap
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <input name="MaPN" />
    <input name="MaNCC" />
    for (int i = 0; i < 10; i++)
    {
        <h2>Thông tin sản phẩm</h2>
        @*Để MVC tự động trả dữ liệu model theo dạng list thì cách đặt tên như sau ["Chỉ số phần tử "].Thuộc tính*@

        <input name="@Url.Content("["+i+"].MaSP")" value="@i" />
        <br />
        <input name="@Url.Content("["+i+"].DonGiaNhap")" value="@i" />
        <input name="@Url.Content("["+i+"].SoLuongNhap")" value="@i" />
        <br />
        <br />

    }
    <input type="submit" value="Đồng ý"/>
}

