@using WebSiteBanHang.Models
@model IEnumerable<Quyen>
@{
    ViewBag.Title = "Quyền";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    // Khởi tạo control webgrid
    // source là 1 lst dữ liệu
    // rowPerPage số sản phẩm trên trang
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
@*Thể hiện dữ liệu thông qua control web grid*@

<h1>Quản lý quyền</h1>

<a type="button" href="@Url.Action("ThemQuyen","Quyen")"> Thêm quyền</a>


@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaQuyen", "Mã quyền"),
    grid.Column("TenQuyen", "Tên quyền")
