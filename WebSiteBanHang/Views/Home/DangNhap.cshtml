@using WebSiteBanHang.Models
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="content-area">

    <div class="login-page">
        <div class="container">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="text-center">Sign In Your Account</h2>
                    @*<form method="post" class="cmxform" action="" id="loginForm" novalidate="novalidate">
                    *@ @using (Ajax.BeginForm("DangNhap", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId="ThongBao" }))
                    {

                        <div class="form-group row">
                            <label for="TaiKhoan" class="col-sm-2 form-control-label">Tài khoản:</label>
                            <div class="col-sm-8">
                                <input type="text" name="TaiKhoan" class="form-control" id="TaiKhoan" placeholder="Tài khoản" required="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="MatKhau" class="col-sm-2 form-control-label">Mật khẩu:</label>
                            <div class="col-sm-8">
                                <input type="password" name="MatKhau" class="form-control" id="MatKhau" placeholder="Mật khẩu" required="">
                            </div>
                        </div>

                        <div class="form-group row col-sm-offset-2">

                            <input type="checkbox" id="remember" name="remember">
                            <label for="remember" style="color:#093; font-weight: normal"><span style="opacity:.5"></span>Remember Me</label><br>
                            <h3 style="font-weight: bold; color: red; text-align: left;" id="ThongBao"></h3>

                        </div>



                        <div class="form-group row">
                            <div class="col-sm-offset-2 col-sm-8">
                                <input type="submit" class="btn btn-success btn-lg btn-block" id="submitForm" value="Sign In">
                            </div>
                        </div>

                        <div class="forget">
                            <p class="pull-left"><a href="forgot_password.html">Forgot Password</a></p>
                            <p class="pull-right">
                                Not a memeber yet..
                                <a href="@Url.Action("DangKy", "Home")">Create a new account</a>
                            </p>
                            <div class="clearfix"></div>
                        </div>

                        @*             </form>*@

                    }



                </div>
            </div> <!--End Row-->

        </div>
    </div> <!--End Registration page div-->

</div>
