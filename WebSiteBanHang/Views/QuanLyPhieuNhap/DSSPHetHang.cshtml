@using WebSiteBanHang.Models
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "DSSPHetHang";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    // Khởi tạo control webgrid
    // source là 1 lst dữ liệu
    // rowPerPage số sản phẩm trên trang
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
<h1>Danh sách sản phẩm gần hết hàng</h1>
@*Thể hiện dữ liệu thông qua control web grid*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã SP"),
    grid.Column("TenSP", "Tên SP"),
    grid.Column("HinhAnh", "Hình ảnh", format: p => Html.Raw("<img width=\"150\" height=\"60\" src=\"../Content/images/product-slide/" + p.HinhAnh + "\">")),
    grid.Column(format: p => @Html.ActionLink("Nhập hàng", "NhapHangDon", new {id = p.MaSP }, new {@target="_blank" }))






        ))

<style>
    .divTable {
        border: 1px solid #999999;
        width: 85%;
        margin: 0 auto;
    }
    .divTable td {
        border: 1px solid #999999;
    }

    .gridHead {
        background-color: green;
    }

    .gridHead > th > a {
            color: #fff;
    }

    .gridFooter {
        font-weight: bold;
    }

