@using Capcha.HtmlHelpers
@using WebSiteBanHang.Models
@model ThanhVien


@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="content-area">

    <div class="registration-page">
        <div class="container">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="text-center">Create Your Account</h2>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <hr/>
                            @Html.ValidationSummary(true)

                            <div class="form-group row">
                                <label for="HoTen" class="col-sm-2 form-control-label">Họ tên:</label>
                                <div class="col-sm-8">
                                    <input type="text" name="HoTen" class="form-control" id="HoTen" placeholder="Họ tên" minlength="2" required="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Email" class="col-sm-2 form-control-label">Email:</label>
                                <div class="col-sm-8">
                                    <input type="email" name="Email" class="form-control email" id="Email" placeholder="test@example.com" required="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="TaiKhoan" class="col-sm-2 form-control-label">Tài khoản:</label>
                                <div class="col-sm-8">
                                    <input type="text" name="TaiKhoan" class="form-control" id="TaiKhoan" placeholder="akash90" required="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="MatKhau" class="col-sm-2 form-control-label">Mật khẩu:</label>
                                <div class="col-sm-8">
                                    <input type="password" name="MatKhau" class="form-control" id="MatKhau" placeholder="Enter password" required="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="NhapLaiMatKhau" class="col-sm-2 form-control-label">Nhập lại mật khẩu:</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" name="NhapLaiMatKhau" id="NhapLaiMatKhau" placeholder="Nhập lại mật khẩu" required="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="DiaChi" class="col-sm-2 form-control-label">Địa chỉ:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="DiaChi" id="DiaChi" placeholder="Địa chỉ" required="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="SoDienThoai" class="col-sm-2 form-control-label">Số điện thoại:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="SoDienThoai" id="DiaChi" required="" placeholder="Số điện thoại">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="CauHoi" class="col-sm-2 form-control-label">Câu hỏi:</label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("CauHoi")
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="CauTraLoi" class="col-sm-2 form-control-label">Câu trả lời:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="CauTraLoi" id="CauTraLoi" placeholder="Câu trả lời" required="">
                                </div>
                            </div>
                            @*<div style="margin: 20px">
                                @Html.MathCaptcha()    
                            </div>*@

                            <div class="form-group row">
                                <div class="col-sm-offset-2 col-sm-8">
                                    <input type="submit" class="btn btn-success btn-lg btn-block" id="submitForm" value="Đăng ký">
                                </div>
                            </div>
                        }
                </div>
            </div> <!--End Row-->

        </div>
    </div> <!--End Registration page div-->

</div>

<h1 style="color: red;">@ViewBag.ThongBao</h1>
