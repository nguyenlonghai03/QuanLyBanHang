@using WebSiteBanHang.Models
@model IEnumerable<LoaiThanhVien>
@{
    ViewBag.Title = "Phân quyền";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    // Khởi tạo control webgrid
    // source là 1 lst dữ liệu
    // rowPerPage số sản phẩm trên trang
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
@*Thể hiện dữ liệu thông qua control web grid*@

<h1>Danh sách loại thành viên</h1>
@*//<button class="btn btn-success ml-5 my-2" >Thêm quyền</button>*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaLoaiTV", "Mã loại TV"),
    grid.Column("TenLoai", "Loại thành viên"),
   grid.Column(format: p => @Html.ActionLink("Phân quyền", "PhanQuyen", new { id = p.MaLoaiTV }))
    //grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaQuyen })),
    //grid.Column(format: p => @Html.ActionLink("Xem chi tiết", "XemChiTiet", new { id = p.MaQuyen }))




        ))

